@using NonFactors.Mvc.Grid;
@model IGridPager
@{
	var qtdMostrando = (Model.CurrentPage < Model.TotalPages) ? Model.RowsPerPage : (Model.TotalRows - ((Model.TotalPages - 1) * Model.RowsPerPage));

}
@if (Model.TotalPages > 1)
{
	<div class="row">
		<div class="col-md-6">
			<span class="texto-tabela pull-left">
				Mostrando @(qtdMostrando) de @(Model.TotalRows) resultados
			</span>
		</div>
		<div class="col-md-6">
			<nav class="mvc-grid-pager pull-right @Model.CssClasses" aria-label="Paginação">
				<ul class="pagination">
					@if (Model.CurrentPage > 1)
					{
					<li><span data-page="@(Model.CurrentPage - 1)">&lsaquo; Anterior</span></li>
					}
					else
					{
					<li class="disabled"><span>&lsaquo; Anterior</span></li>
					}
					@for (Int32 page = Model.FirstDisplayPage; page <= Model.TotalPages && page < Model.FirstDisplayPage + Model.PagesToDisplay; page++)
					{
						if (page == Model.CurrentPage)
						{
						<li class="active"><span>@page</span></li>
						}
						else
						{
						<li><span data-page="@page">@page</span></li>
						}
					}
					@if (Model.CurrentPage < Model.TotalPages)
					{
					<li><span data-page="@(Model.CurrentPage + 1)">Próximo &rsaquo;</span></li>
					}
					else
					{
					<li class="disabled"><span>Próximo &rsaquo;</span></li>
					}
				</ul>
			</nav>
		</div>
	</div>
}